.container
	box-sizing border-box
header
	&[role="banner"]
		background rgb(0, 129, 255)
		transition background 0.5s ease
		&[data-current-step="1"]
			background #cd5c5c
		&[data-current-step="2"]
			background #38cd6b
		&[data-current-step="3"]
			background rgba(205, 97, 50, 1)
		&[data-current-step="4"]
			background #00A7C5
		color white
		display flex
		align-items baseline
		flex-wrap wrap
		justify-content space-between
		+media-query($breakpointMain)
			position relative
			.wizard-step
				padding $padding
				&s
					&-progress
						bottom 0
	for num in (6..1)
		h{num}
			@extend $margin-none
.error
	&-container
		max-width 35em
		@extend $normal-padding, $border-box
	&-description
		@extend $normal-margin-top-bottom
	&-title
		@extend $shake, $text-align-center
		color rgb(187, 89, 89)
		font-weight bold
	&-stack
		@extend $normal-padding, $border-box, $normal-margin

