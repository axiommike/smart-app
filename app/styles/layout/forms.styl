$inputSuccessColour ?= #00cc1c
$inputErrorColour ?= #dc0000

form
	margin 2em
	+media-query($breakpointMain)
		margin inherit
button
	@extend .button
	font-family $baseFontFamily
.input
	&-error
		color $inputErrorColour
		display inline-block
		font-weight bold
		@extend $shake
$textInput
	max-width 100%
	border-width 0 0 $borderWidth 0
	outline none
	color inherit
	background transparent
	border-color rgb(238, 238, 238)
fieldset
	@extend $normal-padding, $bordered-top
textarea
	@extend $textInput
textarea, input
	&[type="text"], &[type="tel"], &[type="url"], &[type="number"], &[type="email"], &[type="date"], &[type="datetime-local"], &[type="week"], &[type="month"], &[type="password"], &[type="file"]
		@extend $textInput
	&[type="number"]
		&[max="100"]
			max-width 3em
	transition $transitionTime $transitionFunction border-color, outline-color
	font-size $unit
	font-family $baseFontFamily
	&:focus
		&:valid
			border-color $inputSuccessColour
		&:invalid
			border-color $inputErrorColour
			outline-color $inputErrorColour
	+placeholder()
		font-family $baseFontFamily
		color luminosity($textColour) > 0.5 ? $inverseTextColour + 45 : $inverseTextColour - 45

.add-button, .remove-button
	+media-query($breakpointMain)
		display block
		float none
		margin $margin
	&:active
		transform scale(1.05)
.add-applicant
	float right
	+media-query($breakpointMain)
		float none
.sub-actions
	@extend $normal-margin, $float-left
