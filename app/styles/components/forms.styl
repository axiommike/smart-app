$formSectionBorderWidth ?= 1px
$formSectionBorderType ?= solid
$formSectionBorderColour ?= rgba(0, 0, 0, 0.4)

$formBordered
	border $formSectionBorderWidth $formSectionBorderType color-fallback($formSectionBorderColour)
$formSectionMargin ?= 1em
$formSectionHeadingPadding ?= 1em
$formSectionLabelWidth ?= 10em
$formFieldPadding ?= 1em
$formActionsMargin ?= 0.3em

$formResponsive ?= true

$formSection
	box-sizing border-box
	border-top 1px solid rgba(181, 181, 181, 0.4)

$formField
	box-sizing border-box
	padding $formFieldPadding

.form
	display inline-block
	if $formResponsive
		+media-query($breakpointMain)
			display inherit
	&-section
		@extend $formSection
		& &
			margin 0 ($formFieldPadding * -1)
		&-title
			text-transform uppercase
			opacity 0.6
			font-size 0.8em
		&-inline
			@extend $formSection
			.form-field, .form-field-horizontal, .form-field-vertical
				display inline-block
		label, input
			display inline-block
		&-header
			padding $formSectionHeadingPadding
	&-field
		@extend $formField
		&-label, &-controls
			display inline-block
			vertical-align top
		&-label
			min-width $formSectionLabelWidth
			if $formResponsive
				+media-query($breakpointMain)
					width 100%
			cursor pointer
		&-controls
			if $formResponsive
				+media-query($breakpointMain)
					width 100%
					input, select, textarea
						width 100%
			&-group
				display table
				input, select, textarea, label
					display table-cell
					vertical-align middle
					white-space nowrap
				&-append
					padding 0 $padding
					cursor pointer
					@extend $formBordered
					&:first-child
						border-right 0
					&:last-child
						border-left 0
		&-horizontal
			@extend $formField
			.form-field-label
				margin-right $formSectionMargin
				min-width $formSectionLabelWidth
			.form-field-label, .form-field-controls
				if $formResponsive
					+media-query($breakpointMain)
						display inherit
		&-vertical
			@extend $formField
			.form-field-label
				min-width 0
				width auto
			.form-field-controls
				display block
		&-hint
			font-weight bold
			color #528CE0
	&-action
		display inline-block
		&s
			margin-top $formSectionMargin
			padding 1em
			text-align right
			+media-query($breakpointMain)
				button
					width 100%
					display block
					& + button
						margin-top $margin
