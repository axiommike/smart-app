.form-step
	border-bottom 1px solid #E2E2E2
	&s
		background #FFF
		box-shadow 0 0.1em 0.3em 0 rgba(0, 0, 0, 0.26)
		list-style-type decimal
.wizard
	&-step
		padding 7%
		&-current-step
			font-weight bold
		&-name
			font-weight bold
		&-title
			display inline-block
			font-size 2em
		.total-steps
			font-size 0.8em
			display inline-block
