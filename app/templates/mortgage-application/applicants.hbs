<h1 class="announcement"><strong>{{model.applicant.firstName}}</strong>, tell me about yourself</h1>
<p class="intro-help">Before we continue, we'll need a couple other details about your job, your date of birth, and any other income sources.</p>
{{#validatable-form action="nextStep"}}
	<button {{action "addApplicant"}} class="add-button add-applicant">Add Co-Applicant</button>
	<ul class="applicants">
		{{#each model.applicants as |applicant|}}
			<li class="applicant {{if applicant.isPrimary "primary" "co-applicant"}}">
				{{applicant-card applicant=applicant isEditing=true
				onRemoveApplicant="removeApplicant"
				onCopyAddresses="copyAddresses"
				onUnlinkAddresses="unlinkAddresses"
				onAddEmployment="addEmployment"
				onRemoveEmployment="removeEmployment"
				onAddIncome="addIncome"
				onRemoveIncome="removeIncome"
				onAddAddress="addAddress"
				onRemoveAddress="removeAddress"
				onAddLiability="addLiability"
				isEditable=false includeIncome=true}}
			</li>
		{{else}}
			<li>No Co-Applicants selected.  <button {{action "addApplicant"}} class="add-button">Add one</button></li>
		{{/each}}
	</ul>
	<footer class="form-actions">
		<button type="submit">Continue to Assets</button>
	</footer>
{{/validatable-form}}
