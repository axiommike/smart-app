<h1 class="announcement">Thanks for coming in</h1>
<article>
	<section class="quick-application box">
		{{#validatable-form action="nextStep"}}
			<div class="row">
				{{#form-field title="First Name" class="column one-half" layoutDirection="vertical"}}
					{{expandable-input value=model.applicant.firstName placeholder="First Name" required=true autofocus="autofocus" id="first-name" autocomplete="given-name" title="Please provide your first name"}}
				{{/form-field}}
				{{#form-field title="Last Name" class="column one-half" layoutDirection="vertical"}}
					{{expandable-input value=model.applicant.lastName placeholder="Last Name" required=true id="last-name" title="Please provide your last name" autocomplete="family-name"}}
				{{/form-field}}
			</div>
			<div class="row">
				{{#form-field title="Email" class="column one-half" layoutDirection="vertical"}}
					{{expandable-input value=model.applicant.email required=true type="email" placeholder="Email" id="email" autocomplete="email" title="Please provide your e-mail address"}}
				{{/form-field}}
				{{#form-field title="Phone" class="column one-half" layoutDirection="vertical"}}
					{{input value=model.applicant.phone type="tel" required=true placeholder="Phone" id="phone" autocomplete="tel" title="Please provide your primary phone number"}}
				{{/form-field}}
			</div>
			{{#form-field title="How'd you hear about me?"}}
				{{select-list content=sourceTypes optionValuePath="value" optionLabelPath="label" value=model.source required=true prompt=" -- " title="Please select the way that you heard about me" action=(action (mut model.source))}}
			{{/form-field}}
			{{#liquid-if model.isReferral}}
				{{#form-field title="Who referred me?"}}
					{{input type="text" value=model.referredBy required=true placeholder="Who referred me?" title="Please indicate who referred me to you"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#liquid-if model.isOther}}
				{{#form-field title="Referral Source"}}
					{{input type="text" value=model.referredBy required=true placeholder="Other Referral Source" title="Please indicate what other source brought you here"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#liquid-if model.referredByClient}}
				{{#form-field title="Which client referred me?"}}
					{{input type="text" value=model.referredBy required=true placeholder="Past Client Name" title="Please indicate what other source brought you here"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#form-field title="What Can I do for you?"}}
				{{select-list content=goals optionValuePath="value" optionLabelPath="label" value=model.type id="what-can-i-do-for-you?" required=true prompt=" -- " title="Please indicate how I can help you" action=(action (mut model.type))}}
			{{/form-field}}
			{{#liquid-if model.isPurchase}}
				{{#form-field title="How much do you have?"}}
					{{currency-input value=model.downPayment required=true title="Please indicate the amount which you can provide in CAD as a downpayment"}}
					{{#liquid-if model.downPayment}}
						<span class="help">A downpayment of <strong>{{format-number model.downPayment style="currency" currency="CAD"}}</strong></span>
					{{/liquid-if}}
				{{/form-field}}
				{{#liquid-if model.downPayment}}
					{{#form-field title="Where is your downpayment coming from?"}}
						{{select-list content=downPaymentSources optionValuePath="value" optionLabelPath="label" value=model.downPaymentSource action=(action (mut model.downPaymentSource))}}
					{{/form-field}}
					{{#liquid-if model.isOtherDownPaymentSource}}
						{{#form-field title="Please describe your other 'other' downpayment source"}}
							{{input type="text" value=model.downPaymentExplanation title="Please provide a downpayment source" required=true placeholder="Source"}}
						{{/form-field}}
					{{/liquid-if}}
				{{/liquid-if}}
			{{/liquid-if}}
			{{#form-field title="Additional Comments" layoutDirection="vertical"}}
				{{textarea value=model.comment class="row" placeholder="Is there anything else I can do for you?" rows=model.commentRows id="anything-else-i-can-do?" title="Anything else you would like to add?"}}
			{{/form-field}}
			<footer class="form-actions">
				<button class="button-success" {{action "sendIncomplete"}} type="submit">Contact Me Now</button>
				<button type="submit" title="Continue to Full Application">Complete Full Application</button>
			</footer>
		{{/validatable-form}}
	</section>
</article>
