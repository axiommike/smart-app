<h1 class="announcement">Thanks for coming in</h1>
<article>
	<section class="quick-application box">
		{{#validatable-form action="nextStep"}}
			<div class="row">
				{{#form-field title="First Name" class="column one-half" layoutDirection="vertical"}}
					{{input value=applicant.firstName placeholder="First Name" required=true autofocus="autofocus" id="first-name" title="Please provide your first name"}}
				{{/form-field}}
				{{#form-field title="Last Name" class="column one-half" layoutDirection="vertical"}}
					{{input value=applicant.lastName placeholder="Last Name" required=true id="last-name" title="Please provide your last name"}}
				{{/form-field}}
			</div>
			{{#form-section title="Contact Information" icon="mail"}}
				<div class="row">
					{{#form-field title="Email" class="column one-half" layoutDirection="vertical"}}
						{{input value=applicant.email required=true type="email" placeholder="Email" id="email"}}
					{{/form-field}}
					{{#form-field title="Phone" class="column one-half" layoutDirection="vertical"}}
						{{input value=applicant.phone type="tel" required=true placeholder="Phone" id="phone"}}
					{{/form-field}}
				</div>
			{{/form-section}}
			{{#form-section title="Comments"}}
				{{#form-field title="Anything else I can do?" layoutDirection="vertical"}}
					{{textarea value=comment placeholder="Is there anything else I can do for you?" rows=comment.length id="anything-else-i-can-do?"}}
				{{/form-field}}
			{{/form-section}}
			<footer class="form-actions">
				<button type="submit" title="Continue to Full Application">Continue Application</button>
				<div class="sub-actions">
					<a href="tel:15555555555" title="Call me on my cell phone">or call me</a>
				</div>
			</footer>
		{{/validatable-form}}
	</section>
</article>
