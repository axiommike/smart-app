<h1 class="announcement">Thanks for coming in</h1>
<article>
	<section class="quick-application box">
		{{#validatable-form action="nextStep"}}
			<div class="row">
				{{#form-field title="First Name" class="column one-half" layoutDirection="vertical"}}
					{{input value=model.applicant.firstName placeholder="First Name" required=true autofocus="autofocus" id="first-name" autocomplete="given-name" title="Please provide your first name"}}
				{{/form-field}}
				{{#form-field title="Last Name" class="column one-half" layoutDirection="vertical"}}
					{{input value=model.applicant.lastName placeholder="Last Name" required=true id="last-name" title="Please provide your last name" autocomplete="family-name"}}
				{{/form-field}}
			</div>
			<div class="row">
				{{#form-field title="Email" class="column one-half" layoutDirection="vertical"}}
					{{input value=model.applicant.email required=true type="email" placeholder="Email" id="email" autocomplete="email"}}
				{{/form-field}}
				{{#form-field title="Phone" class="column one-half" layoutDirection="vertical"}}
					{{input value=model.applicant.phone type="tel" required=true placeholder="Phone" id="phone" autocomplete="tel"}}
				{{/form-field}}
			</div>
			{{#form-field title="How'd you hear about me?"}}
				{{view "select" content=sourceTypes optionValuePath="content.value" optionLabelPath="content.label" value=model.source required=true prompt=" -- "}}
			{{/form-field}}
			{{#liquid-if model.isReferral}}
				{{#form-field title="Who referred me?"}}
					{{input type="text" value=model.referredBy required=true placeholder="Who referred me?" title="Please indicate who referred me to you"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#liquid-if model.isOther}}
				{{#form-field title="Referral Source"}}
					{{input type="text" value=model.referredBy required=true placeholder="Other Referral Source" title="Please indicate what other source brought you here"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#liquid-if model.referredByClient}}
				{{#form-field title="Which client referred me?"}}
					{{input type="text" value=model.referredBy required=true placeholder="Past Client Name" title="Please indicate what other source brought you here"}}
				{{/form-field}}
			{{/liquid-if}}
			{{#form-field title="What Can I do for you?"}}
				{{view "select" content=goals optionValuePath="content.value" optionLabelPath="content.label" value=model.type id="what-can-i-do-for-you?" required=true prompt=" -- "}}
			{{/form-field}}
			{{#liquid-if model.isPurchase}}
				<section class="row">
					{{#form-field title="Term" class="column"}}
						{{view "select" content=mortgageTerms optionValuePath="content.value" optionLabelPath="content.label" value=model.term}}
					{{/form-field}}
					{{#form-field title="Amortization" class="column"}}
						{{view "select" content=mortgageTerms optionValuePath="content.value" optionLabelPath="content.label" value=model.amortization}}
					{{/form-field}}
					{{#form-field title="Property Value" class="column"}}
						{{currency-input value=model.propertyValue required=true title="Please indicate the value of the property you wish to purchase"}}
					{{/form-field}}
					{{#form-field title="Downpayment" class="column"}}
						{{currency-input value=model.downPayment required=true title="Please indicate the amount which you can provide in CAD as a downpayment"}}
						{{#if model.downPaymentPercentage}}
							<span class="help">A downpayment of <strong>{{format-number model.downPaymentPercentage style="percent"}}</strong></span>
						{{/if}}
					{{/form-field}}
					{{#if model.downPayment}}
						{{#form-field title="Downpayment Source" class="column"}}
							{{view "select" content=downPaymentSources optionValuePath="content.value" optionLabelPath="content.label" value=model.downPaymentSource}}
						{{/form-field}}
					{{/if}}
				</section>
			{{/liquid-if}}

			{{#form-field title="Additional Comments" layoutDirection="vertical"}}
				{{textarea value=model.comment class="row" placeholder="Is there anything else I can do for you?" rows=model.commentRows id="anything-else-i-can-do?"}}
			{{/form-field}}
			<footer class="form-actions">
				<button class="button-success" {{action "sendIncomplete"}} type="submit">Contact Me Now</button>
				<button type="submit" title="Continue to Full Application">Complete Full Application</button>
			</footer>
		{{/validatable-form}}
	</section>
</article>
