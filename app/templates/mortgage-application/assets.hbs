{{wizard-step stepName="Assets" totalSteps=5 step=2}}

{{#validatable-form action="nextStep"}}
	<ol class="form-steps">
		<li class="form-step">
			{{#form-field title="Do you own your current residence?"}}
				{{input type="checkbox" checked=ownsCurrentResidence id="do-you-own-your-current-residence?"}}
			{{/form-field}}
			{{#if ownsCurrentResidence}}
				{{property-asset property=applicant.currentProperty}}
			{{/if}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other real estate?"}}
				{{input type="checkbox" checked=ownsOtherRealEstate id="do-you-own-any-other-real-estate?"}}
				{{#if ownsOtherRealEstate}}
					{{property-table properties=applicant.otherProperties onAdd="addProperty" title="List of all Properties" caption="Other Properties"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any savings or chequing accounts?"}}
				{{input type="checkbox" checked=hasSavings title="Please indicate whether you have invested in any government funds or locked-in investments" id="do-you-have-any-savings-or-chequing-accounts?"}}
				{{#if hasSavings}}
					{{asset-table assets=applicant.assets type="savings" onAdd="addAsset" title="Table of all GIC, long-term, and term-based bank account assets" caption="Term Deposit Account Assets"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any personal items of significant value? (boats, toys, skidoos, man toys)"}}
				{{input type="checkbox" checked=hasPersonalItems title="Please indicate whether you have any belongings worth of significant value" id="do-you-have-any-personal-items-of-significant-value?-(boats,-toys,-skidoos,-man-toys)"}}
				{{#if hasPersonalItems}}
					{{asset-table assets=applicant.assets type="item" onAdd="addAsset" title="Table of all personal assets" caption="All Personal Item Assets"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any GIC or Term Deposit investments?"}}
				{{input type="checkbox" checked=hasGICs title="Please indicate whether you have any GIC or Term Deposit investments" id="do-you-have-any-gic-or-term-deposit-investments?"}}
				{{#if hasGICs}}
					{{asset-table assets=applicant.assets type="gic" onAdd="addAsset" title="Table of all GIC and Term Deposit Accounts" caption="GIC and Term Deposit Accounts"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any RESP savings accounts?"}}
				{{input type="checkbox" checked=hasRESPs title="Please indicate whether you have any RESP (Registered Educational Savings Plan) funds or accounts" id="do-you-have-any-resp-savings-accounts?"}}
				{{#if hasRESPs}}
					{{asset-table assets=applicant.assets type="resp" onAdd="addAsset" title="Table of all RESP Accounts" caption="All RESP Accounts"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any RRSP savings accounts?"}}
				{{input type="checkbox" checked=hasRRSPs title="Please indicate whether you have any RRSP funds or accounts" id=""}}
				{{#if hasRRSPs}}
					{{asset-table assets=applicant.assets type="rrsp" onAdd="addAsset" title="Table of all RRSP Accounts" caption="All RRSP Accounts"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any stocks or bond investments?"}}
				{{input type="checkbox" checked=hasInvestments title="Please indicate whether you have any stocks or bond investments" id="do-you-have-any-stocks-or-bond-investments?"}}
				{{#if hasInvestments}}
					{{asset-table assets=applicant.assets type="investment" onAdd="addAsset" title="Table of all personal assets" caption="All Personal Item Assets"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any vehicles?"}}
				{{input type="checkbox" checked=hasVehicles title="Please indicate whether you have any vehicles (rental, loan, or own)" id="do-you-have-any-vehicles?"}}
				{{#if hasVehicles}}
					{{asset-table assets=applicant.assets type="vehicle" onAdd="addAsset" title="Table of all vehicles" caption="All Vehicles"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other assets?"}}
				{{input type="checkbox" checked=ownsOtherAssets id="do-you-own-any-other-assets?"}}
				{{#if ownsOtherAssets}}
					{{asset-table assets=applicant.assets type="other" onAdd="addAsset"}}
				{{/if}}
			{{/form-field}}
		</li>
	</ol>
	<footer class="form-actions">
		<button type="submit">Continue to Liabilities</button>
	</footer>
{{/validatable-form}}
{{outlet}}
