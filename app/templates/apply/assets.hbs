{{wizard-step stepName="Assets" totalSteps=4 step=2}}

{{#validatable-form action="nextStep"}}
	<ol class="form-steps">
		<li class="form-step">
			{{#form-field title="Do you own your current residence?"}}
				{{input type="checkbox" checked=ownsCurrentResidence id="do-you-own-your-current-residence?"}}
			{{/form-field}}
			{{#if ownsCurrentResidence}}
				{{property-table property=currentProperty}}
			{{/if}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other real estate?"}}
				{{input type="checkbox" checked=ownsOtherRealEstate id="do-you-own-any-other-real-estate?"}}
				{{#if ownsOtherRealEstate}}
					{{property-table properties=applicant.properties onAdd="addProperty" summary="List of all Properties" caption="Other Properties"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other assets?"}}
				{{input type="checkbox" checked=ownsOtherAssets id="do-you-own-any-other-assets?"}}
				{{#if ownsOtherAssets}}
					{{asset-table assets=applicant.assets onAdd="addAsset"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="What do you owe?"}}
				{{input value=applicant.debt type="number" step="any" min="0" placeholder="Debts" id="what-do-you-owe?"}}
			{{/form-field}}
		</li>
	</ol>
	<footer class="form-actions">
		<button type="submit">Continue to Co-Applicants</button>
	</footer>
{{/validatable-form}}
{{outlet}}
