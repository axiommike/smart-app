{{wizard-step stepName="Assets" totalSteps=5 step=2}}

{{#validatable-form action="nextStep"}}
	<ol class="form-steps">
		<li class="form-step">
			{{#form-field title="Do you own your current residence?"}}
				{{input type="checkbox" checked=ownsCurrentResidence id="do-you-own-your-current-residence?"}}
			{{/form-field}}
			{{#if ownsCurrentResidence}}
				{{property-asset property=currentProperty}}
			{{/if}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other real estate?"}}
				{{input type="checkbox" checked=ownsOtherRealEstate id="do-you-own-any-other-real-estate?"}}
				{{#if ownsOtherRealEstate}}
					{{property-table properties=applicant.properties onAdd="addProperty" summary="List of all Properties" caption="Other Properties"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you own any other assets?"}}
				{{input type="checkbox" checked=ownsOtherAssets id="do-you-own-any-other-assets?"}}
				{{#if ownsOtherAssets}}
					{{asset-table assets=applicant.assets onAdd="addAsset"}}
				{{/if}}
			{{/form-field}}
		</li>
		<li class="form-step">
			{{#form-field title="Do you have any RRSPs or any other savings?"}}
				{{input type="checkbox" checked=hasGICs title="Please indicate whether you have invested in any government funds or locked-in investments" required="required" id="do-you-have-any-rrsps-or-any-other-savings?"}}
				{{#if hasGICs}}
					{{asset-table assets=applicant.assets type="gic" onAdd="addAsset" summary="Table of all GIC, long-term, and term-based bank account assets" caption="Term Deposit Account Assets"}}
				{{/if}}
			{{/form-field}}
		</li>
	</ol>
	<footer class="form-actions">
		<button type="submit">Continue to Liabilities</button>
	</footer>
{{/validatable-form}}
{{outlet}}
