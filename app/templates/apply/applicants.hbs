{{wizard-step stepName="Co-Applicants" totalSteps=4 step=3}}
{{#validatable-form action="nextStep"}}
	<button {{action "addApplicant"}}>Add Co-Applicant</button>
	<ul class="applicants">
		{{#each applicant in applicants}}
			<li {{bind-attr class=":applicant applicant.isPrimary:primary:co-applicant"}}>
				{{applicant-card applicant=applicant isEditing=true onRemoveApplicant="removeApplicant" isEditable=false}}
			</li>
		{{else}}
			<li>No Co-Applicants selected.  <button {{action "addApplicant"}}>Add one</button></li>
		{{/each}}
	</ul>
	<footer class="form-actions">
		<button type="submit">Review Application</button>
	</footer>
{{/validatable-form}}
