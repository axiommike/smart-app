{{#form-field label=label}}
	{{#if address.isCurrent}}
		{{address-input address=address value=address.address placeholder=label title="Please indicate where you are currently living" required=required}}
	{{else}}
		{{address-input address=address value=address.address placeholder=label title="Please provide an address" required=required}}
	{{/if}}
	{{#if address.address}}
		<div class="address-details-container">
			<header class="address-header">
				{{accessible-icon icon="pushpin" title=address.address}}
			</header>
			<ul class="address-details">
				<li class="address-street">{{address.street}}</li>
				<li class="address-city">{{address.city}}</li>
				<li class="address-postal-code">{{address.postalCode}}</li>
				<li class="address-province">{{address.province}}</li>
				<li class="address-country">{{address.country}}</li>
			</ul>
			{{#if address.url}}
				<a href="{{address.url}}" title="View {{address.address}} on Google Maps" target="{{address.address}}">{{accessible-icon icon="share" title="View this location on Google Maps"}}</a>
			{{/if}}
		</div>
	{{/if}}
{{/form-field}}
{{#form-field label="How Long?"}}
	{{input type="number" value=address.tenureYears placeholder="Years" min="0" step="1" required=true title="Please indicate the amount of time in which this address was resided"}}
	<label for = "tenure-years">years</label>
	{{input type="number" value=address.tenureMonths placeholder="mths" min="0" max="12" step="1"}}
	<label for = "tenure-months">months</label>
	{{#liquid-if address.tenureTotalYears}}
		<span class="help">Lived here for {{address.tenureTotalYears}} year(s)</span>
	{{/liquid-if}}
{{/form-field}}
{{yield}}
