<header class="applicant-card-header">
    <h1 class="applicant-card-title">
        <span class="applicant-card-full-name">
            {{#if applicant.first_name}}
                {{applicant.first_name}} {{applicant.last_name}}
            {{else}}
                {{#if is_primary}}
                    Primary Applicant
                {{else}}
                    Co-Applicant
                {{/if}}
            {{/if}}
        </span>
        {{#if is_primary}}
            <sup class="applicant-card-role">Primary Applicant</sup>
        {{/if}}
    </h1>

    {{#liquid-if applicant.email}}
        {{gravatar-image email=applicant.email alt=applicant.first_name size=250 defaultImage="identicon" class="applicant-card-image" secure=false title=applicant.first_name}}
    {{/liquid-if}}
    <ul class="applicant-card-actions">
        {{#unless is_primary}}
            <li class="applicant-card-action">
                <button {{action "removeApplicant"}}>Remove {{applicant.first_name}} {{applicant.last_name}}</button>
            </li>
        {{/unless}}
    </ul>
</header>

<article class="applicant-card-content">
    {{#liquid-if is_editing}}
        {{#form-section title="basic-information" icon="info"}}
            <div class = "row">
                {{#form-field label="First Name" class="column one-half" layoutDirection="vertical"}}
                    {{expandable-input value=applicant.first_name placeholder="First Name" required=true autofocus="autofocus" title="Please provide the applicant's first name" autocomplete="given-name"}}
                {{/form-field}}
                {{#form-field label="Last Name" class="column one-half" layoutDirection="vertical"}}
                    {{expandable-input value=applicant.last_name placeholder="Last Name" required=true title="Please provide the applicant's last name" autocomplete="family-name"}}
                {{/form-field}}
            </div>
            {{#form-section title="Contact Methods" icon="mail"}}
                <div class="row">
                    {{#form-field label="Email" class="column" layoutDirection="vertical"}}
                        {{expandable-input value=applicant.email required=true type="email" placeholder="Email" title="Please enter a valid e-mail"}}
                    {{/form-field}}
                    {{#form-field label="Phone" class="column" layoutDirection="vertical"}}
                        {{input-mask mask="999-999-9999" value=applicant.home_phone required=true placeholder="Phone" autocomplete="tel" title="Please provide the applicant's phone number"}}
                    {{/form-field}}
                    {{#form-field label="Birth Date" layoutDirection="vertical"}}
                        {{input type="date" value=applicant.birth_date required=true title="Please provide the date of birth of the applicant" autocomplete="bdate" max=youngestApplicantAge}}
                    {{/form-field}}
                </div>
            {{/form-section}}
            {{#form-field label="Marital Status"}}
                {{select-list content=maritalStatusOptions value=applicant.marital_status optionValuePath="value" optionLabelPath="label" required=true prompt=" -- " title="Please indicate the applicant's marital status (single, married, etc.)" change="changeMaritalStatus"}}
            {{/form-field}}
            {{#unless is_primary}}
                {{#form-field label="Relationship"}}
                    {{select-list content=relationshipTypes optionValuePath="value" optionLabelPath="label" required=true prompt=" -- " title="Please indicate the applicant's marital status (single, married, etc.)" change="changeRelationship"}}
                {{/form-field}}
            {{/unless}}
        {{/form-section}}
        {{#form-section title="Location" icon="pushpin"}}
            {{#unless is_primary}}
                {{#if isLinked}}
                    <button {{action "unlinkAddresses"}}>Unlink Addresses</button>
                {{else}}
                    <button {{action "copyAddresses"}}>Same as primary applicant</button>
                {{/if}}
            {{/unless}}
            {{address-table addresses=applicant.addresses person_id=applicant.id}}
        {{/form-section}}
        {{#form-section title="Employment" icon="briefcase"}}
            {{employment-table employments=applicant.employments}}
        {{/form-section}}
        {{#form-section title="Extra Income Sources" icon="coin-dollar"}}
            {{income-table income=applicant.incomes}}
        {{/form-section}}

    {{else}}
    {{/liquid-if}}

    {{yield}}
</article>