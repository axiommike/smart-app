<header class="table-header">
	<button {{action "addAsset"}} class="add-button">Add {{typeName}}</button>
	{{#if caption}}
		<h5 class="caption">
			{{caption}}
			{{#liquid-if totalAssets}}
				<sup><strong>{{format-number totalAssets style="currency" currency="CAD"}}</strong> total</sup>
			{{/liquid-if}}
		</h5>
	{{/if}}
</header>

<ul class="assets">
	{{#each filteredAssets as |asset|}}
		<li class="asset">
			{{asset-instance asset=asset}}
			<button {{action "removeAsset" asset}} class="remove-button">Remove {{#if asset.type}}
				{{asset.type}}
			{{else}}
				Asset
			{{/if}}
			</button>
		</li>
	{{else}}
		<li>
			No assets found.  <a {{action "addAsset"}}>Add One?</a>
		</li>
	{{/each}}
</ul>

{{yield}}
