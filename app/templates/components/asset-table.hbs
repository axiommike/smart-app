<header class="asset-table-header">
	<button {{action "addAsset"}}>Add Asset</button>
	{{#if caption}}
		<h5 class="caption">
			{{caption}}
			{{#if totalAssets}}
				<sup><strong>${{totalAssets}}</strong> total</sup>
			{{/if}}
		</h5>
	{{/if}}
</header>

<ul class="assets">
	{{#each asset in filteredAssets}}
		<li class="asset">
			{{#unless type}}
				{{#form-field title="Type"}}
					{{view "select" content=assetTypes optionValuePath="content.value" optionLabelPath="content.label" value=asset.type required=true}}
				{{/form-field}}
			{{/unless}}
			{{#form-field title="Asset Value"}}
				{{input type="number" value=asset.value placeholder="Asset Value" min="0" step="100"}}
			{{/form-field}}
			<button {{action "removeAsset" asset}}>Remove Asset</button>
		</li>
	{{else}}
		<li>
			No assets found.  <button {{action "addAsset"}}>Add One?</button>
		</li>
	{{/each}}
</ul>

{{yield}}
