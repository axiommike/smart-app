{{#form-field label="Employment Type"}}
  {{select-list content=employmentTypes optionValuePath="value" optionLabelPath="label"
                title="Please choose the type of employment" change="changeType"}}
{{/form-field}}

{{#liquid-if showPosition}}
  {{#form-field label="Position"}}
    {{input type="text" value=employment.occupation placeholder="Job Title" required=true
            title="Please indicate the job title for this employment record" size=employment.occupation.length}}
  {{/form-field}}
  {{#form-field label="Employer/Business"}}
    {{input type="text" value=employment.employer title="Please provide the employer for this position" required=true
            placeholder="Name" size=employment.employer.length}}
  {{/form-field}}
  {{#form-field label="Address"}}
    {{address-input
      address=employoment.address
      change="changeAddress"
      value=employment.address
      placeholder="Address"
      required=true}}
  {{/form-field}}
  {{#liquid-if showBusinessType}}
    {{#form-field label="Business Type"}}
      {{select-list content=businessTypes optionValuePath="value" optionLabelPath="label" required=true
                    title="Please indicate the legal classification of your business" change="changeBusinessType"}}
    {{/form-field}}
  {{/liquid-if}}
  {{#liquid-unless showBusinessType}}
    {{#form-field label="Phone Number"}}
      {{input-mask mask="999-999-9999" value=employment.phone placeholder="Phone Number" required=true
                   title="Please indicate this employer's primary phone number"}}
    {{/form-field}}
  {{/liquid-unless}}
{{/liquid-if}}

{{#form-field label="How long?"}}
  <label>{{input type="number" value=employment.tenure_year required=true placeholder="Years" min="0" max="100" step="1"
                 title="Please indicate how many years you have owned this company"}} years</label>
  <label>{{input type="number" value=employment.tenure_month placeholder="mths" min="0" max="12" step="1"}}
    months</label>
{{/form-field}}

{{#liquid-if showCompensation}}
  {{#form-field label="Compensation"}}
    {{select-list content=paymentFrequencies optionValuePath="value" optionLabelPath="label"
                  title="Please select the payment frequency for this position" change="changePaymentFrequency"}}
  {{/form-field}}
  {{#if isHourly}}
    {{#form-field label="Hours Per Week"}}
      {{input type="range" min=0 step=0.5 max=60 value=employmentProxy.weeklyHours required=true
              title="Please indicate how many hours per week were worked in this position"}}
      {{#if employment.weeklyHours}}
        <span>worked <strong>{{employment.weeklyHours}}</strong> hours per week</span>
      {{/if}}
    {{/form-field}}
    {{#form-field label="Hourly Rate"}}
      {{currency-input min=0 step="any" value=employmentProxy.hourlyRate required=true}}
      {{#if employment.hourlyRate}}
        <span class="help"><strong>{{format-number employment.hourlyRate style="currency" currency="CAD"}}</strong> dollars per hour</span>
      {{/if}}
    {{/form-field}}
  {{/if}}
{{/liquid-if}}


{{#liquid-if showAnnualPay}}
  {{#form-field label="Annual Pay"}}
    {{currency-input min="0" step="any" value=employment.annual_pay required=true}}
  {{/form-field}}
{{/liquid-if}}

{{#liquid-if showCompensation}}
  {{#form-field label="I currently work here"}}
    {{on-off-switch checked=employment.is_current title="Is the job current?"}}
  {{/form-field}}
{{/liquid-if}}

{{#liquid-if showLine150}}
  {{#form-section title="Last 2 Years' Line 150" icon="dollar"}}
    {{#each noaValues as |year|}}
      {{#form-field label=year.year}}
        {{currency-input min="0" step="any" value=year.value required=true placeholder="0"
                         title="Please indicate the filed income for this yearly assesment"}}
      {{/form-field}}
    {{/each}}
  {{/form-section}}
  <span class="option-separator">or</span>
  {{#form-field label="Approximate annual, taxable income"}}
    {{currency-input min="0" step="any" value=employment.income_value required=true}}
  {{/form-field}}
{{/liquid-if}}
{{yield}}

{{#if removable}}
  <button title="Remove this employment" {{action "remove"}} class="remove-button">Remove</button>
{{/if}}
