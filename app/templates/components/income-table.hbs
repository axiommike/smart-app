<header class="table-header">
	<button class="add-button" {{action "addIncome"}}>Add Extra Income</button>
{{#unless flatList}}
	{{#liquid-if totalIncome}}
		<sup><strong>{{format-number totalIncome style="currency" currency="CAD"}}</strong> total</sup>
	{{/liquid-if}}
{{/unless}}
</header>

<ul class="income income-table {{if flatList "flat-list"}}">
	{{#each filteredIncome as |extraIncome|}}
		<li class="income {{if extraIncome.source extraIncome.source}}">
			{{income-instance income=extraIncome flatList=flatList isEditable=isEditable onRemove="removeIncome" showApplicant=showApplicant}}
		</li>
	{{else}}
		<li>Add <a {{action "addIncome"}}><strong>investment</strong>, <strong>child support</strong>, <strong>rental</strong>, <strong>pension</strong>, or other sources of income</a></li>
	{{/each}}
</ul>

{{#if flatList}}
	{{#liquid-if totalIncome}}
		<footer class="table-total">
			<sup><strong>{{format-number totalIncome style="currency" currency="CAD"}}</strong> total</sup>
		</footer>
	{{/liquid-if}}
{{/if}}

{{yield}}
