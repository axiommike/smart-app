{{#if property}}
	{{#form-section title="Address and Location"}}
		{{historical-address address=property.address}}
		{{#form-field title="Do you have a rental agreement?"}}
			{{on-off-switch checked=property.isRental title="Please indicate whether this property was rented"}}
		{{/form-field}}
		{{#liquid-if property.isRental}}
			{{#form-field title="Rental Income"}}
				{{currency-input value=property.rentalIncome placeholder="Property Value" min="0" step="100"}}
			{{/form-field}}
		{{/liquid-if}}
		{{#form-field title="Estimated Property Value"}}
			{{currency-input value=property.value placeholder="Property Value" min="0" step="10000"}}
		{{/form-field}}
		{{#form-field title="Property Taxes"}}
			{{currency-input value=property.propertyTaxes placeholder="Property Taxes" min="0" step="any"}}
			{{#if property.propertyTaxes}}
				<span class="help">{{property.propertyTaxes}} * 12 = <strong>{{format-number property.propertyTaxesAnnual style="currency" currency="CAD"}} per year</strong></span>
			{{/if}}
		{{/form-field}}
	{{/form-section}}
	{{#form-section title="Mortgage"}}
		{{liability-instance liability=property.mortgage typeEditingDisabled=true}}
	{{/form-section}}
{{else}}
	Hmmm... no property was found here.  Maybe try refreshing?
{{/if}}

{{yield}}
